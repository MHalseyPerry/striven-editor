{
  "name": "@striven-erp/striven-editor",
  "sideEffects": false,
  "private": false,
  "version": "1.3.0",
  "description": "The lightweight Striven WYSIWYG editor built with pure JavaScript.",
  "main": "./dist",
  "scripts": {
    "start": "cd demo && npm run serve",
    "build": "npx webpack --mode=\"production\"",
    "dev": "npx webpack -w",
    "meta-server": "node metaserver",
    "gh-pages": "cd demo && npm run build && cd .. && node gh-pages",
    "new-publish": "npx webpack --mode=\"production\" && npm publish --access=public && echo DON'T FORGET TO UPDATE GITHUB RELEASE",
    "test": "cross-env NODE_ENV=test node_modules/mocha/bin/mocha --require @babel/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/business-by-miles/striven-editor.git"
  },
  "keywords": [
    "Striven",
    "Editor",
    "WYSIWYG",
    "rich-text-editor"
  ],
  "author": "Striven <https://striven.com/>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/business-by-miles/striven-editor/issues"
  },
  "homepage": "https://github.com/business-by-miles/striven-editor#readme",
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-modules-umd": "^7.2.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.2",
    "babel-loader": "^8.0.6",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "express": "^4.17.1",
    "gh-pages": "^2.1.1",
    "got": "^9.6.0",
    "metascraper": "^5.7.4",
    "metascraper-description": "^5.7.4",
    "metascraper-image": "^5.7.4",
    "metascraper-title": "^5.7.4",
    "metascraper-url": "^5.7.4",
    "mocha": "^6.2.2",
    "shortid": "^2.2.15",
    "sinon": "^7.5.0",
    "terser-webpack-plugin": "^2.0.1",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {}
}
